{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":enablePreCommit",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone",
    ":timezone(Asia/Tokyo)"
  ],
  "rangeStrategy": "pin",
  "major": {
    "automerge": false
  },
  "nodenv": {
    "enabled": false
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "automergeSchedule": [
    "before 2am"
  ],
  "packageRules": [
    {
      "automerge": true,
      "matchManagers": [
        "pre-commit"
      ]
    },
    {
      "automerge": true,
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "minimumReleaseAge": "3 days",
      "prCreation": "not-pending"
    }
  ]
}
